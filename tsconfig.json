{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "ts-built",
    "alwaysStrict": false // this is for the REPL extension
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
